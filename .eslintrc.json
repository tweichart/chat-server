{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "import/extensions": ["error", {
            "js": "ignorePackages"
        }],
        "no-console": "off"
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    ["#Controllers", "./src/Controllers/"],
                    ["#Events", "./src/Events/"],
                    ["#Exceptions", "./src/Exceptions/"],
                    ["#Repositories", "./src/Repositories"],
                    ["#src", "./src"]
                ],
                "extensions": [
                    ".js"
                ]
            }
        }
    }
}
